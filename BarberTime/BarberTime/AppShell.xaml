<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="BarberTime.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:BarberTime"
    xmlns:views="clr-namespace:BarberTime.Views">

    <ShellContent 
        Title="Sign up"
        ContentTemplate="{DataTemplate views:CreateAccountPage}" 
        Route="CreateAccountPage"/>
    
    <ShellContent 
        Title="Sign in"
        ContentTemplate="{DataTemplate views:SignInPage}" 
        Route="SignInPage"/>

    <TabBar>
        <ShellContent
        Title="Home"
        Icon="home_icon.png"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />

        <ShellContent 
        Title="Styles"
        Icon="hairstyle_icon.png"
        ContentTemplate="{DataTemplate views:Haircutpage}" 
        Route="Haircutpage"/>

        <ShellContent 
        Title="Agenda"
        Icon="agenda_icon.png"
        ContentTemplate="{DataTemplate views:Agendapage}" 
        Route="Agenda"/>

        <ShellContent 
        Title="Products"
        Icon="product_icon.png"
        ContentTemplate="{DataTemplate views:Producten}" 
        Route="Products"/>

    </TabBar>
</Shell>
