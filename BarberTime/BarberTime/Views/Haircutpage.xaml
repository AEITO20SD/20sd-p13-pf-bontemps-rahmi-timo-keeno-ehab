<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="BarberTime.Views.Haircutpage"
             >

    <Grid RowDefinitions="*,10*">
        <BoxView Grid.Row="0" Grid.ColumnSpan="3" Color="#3A4774"/>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>
        <Button Text="Kort haar" Grid.Column="0" HorizontalOptions="Center" VerticalOptions="Center"/>
        <Button Text="Middellang haar" Grid.Column="1" HorizontalOptions="Center" VerticalOptions="Center"/>
        <Button Text="Lang haar" Grid.Column="2" HorizontalOptions="Center" VerticalOptions="Center"/>
    </Grid>

</ContentPage>